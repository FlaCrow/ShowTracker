<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actor_card_height"
    android:layout_marginHorizontal="@dimen/grid_2"
    android:layout_marginVertical="@dimen/grid_1"
    app:cardCornerRadius="20dp">

    <ImageView
        android:id="@+id/person_photo_iv"
        android:layout_width="@dimen/actor_photo_width"
        android:layout_height="@dimen/actor_card_height"
        android:contentDescription="@string/poster_content_desc"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/actor_photo_width_plus_grid_2"
            android:layout_marginTop="@dimen/grid_2"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Actor Name" />

        <TextView
            android:id="@+id/known_for_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/actor_photo_width_plus_grid_2"
            android:textAppearance="?textAppearanceSubtitle1"
            tools:text="Actor" />

        <TextView
            android:id="@+id/role_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/actor_photo_width_plus_grid_2"
            android:textAppearance="?textAppearanceBody1"
            tools:text="Played as Character" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>